<Window x:Class="MemoryGame.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.Views"
        mc:Ignorable="d"
        Title="Sign In" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Wellcome Enjoy this game!" 
                   FontSize="24" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0" 
                     Margin="20"
                     ItemsSource="{Binding Users}" 
                     SelectedItem="{Binding SelectedUser}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Username}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        BorderBrush="Gray" 
                        BorderThickness="1">
                    <Image Source="{Binding SelectedUser.ImagePath}" 
                           Stretch="Uniform"
                           Margin="10"/>
                </Border>

                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,10,0,0">
                    <Button Content="&lt;&lt;" 
                            Width="40" 
                            Margin="5,0"
                            Command="{Binding PreviousImageCommand}"
                            IsEnabled="{Binding CanNavigateImages}"/>

                    <Button Content="&gt;&gt;" 
                            Width="40" 
                            Margin="5,0"
                            Command="{Binding NextImageCommand}"
                            IsEnabled="{Binding CanNavigateImages}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="New User" 
                    Margin="5" 
                    Command="{Binding NewUserCommand}"/>

            <Button Grid.Column="1" 
                    Content="Delete User" 
                    Margin="5" 
                    Command="{Binding DeleteUserCommand}"
                    IsEnabled="{Binding CanDeleteUser}"/>

            <Button Grid.Column="2" 
                    Content="Play" 
                    Margin="5" 
                    Command="{Binding PlayCommand}"
                    IsEnabled="{Binding CanPlay}"/>

            <Button Grid.Column="3" 
                    Content="Cancel" 
                    Margin="5" 
                    Command="{Binding CancelCommand}"/>
        </Grid>
    </Grid>
</Window>